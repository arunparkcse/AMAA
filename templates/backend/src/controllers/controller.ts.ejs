import { Request, Response, NextFunction } from 'express';
import { validationResult, body } from 'express-validator';
import { <%= toPascal(ent.name) %> } from '../models/<%= ent.name %>';

declare module 'express-serve-static-core' {
  interface Request {
    file?: any;
  }
}

interface MulterRequest extends Request {
  file?: any;
}

const validationRules = [
  <% ent.columns.forEach(col => { if (col.required) { %>
  body('<%= col.name %>').notEmpty().withMessage('Required'),
  <% } }) %>
];

export const create = [
  ...validationRules,
  async (req: MulterRequest, res: Response) => {
    const errors = validationResult(req);
    if (!errors.isEmpty()) return res.status(400).json({ errors: errors.array() });

    try {
      const data = { ...req.body };
      if (req.file) data.image = `/uploads/${req.file.filename}`;
      const rec = await <%= toPascal(ent.name) %>.create(data);
      res.status(201).json(rec);
    } catch (e: any) {
      res.status(500).json({ error: e.message });
    }
  }
];

export const getAll = async (req: Request, res: Response) => {
  try {
    const items = await <%= toPascal(ent.name) %>.findAll();
    res.json(items);
  } catch (e: any) {
    res.status(500).json({ error: e.message });
  }
};

export const getOne = async (req: Request, res: Response) => {
  try {
    const item = await <%= toPascal(ent.name) %>.findByPk(req.params.id);
    if (!item) return res.status(404).json({ error: 'Not found' });
    res.json(item);
  } catch (e: any) {
    res.status(500).json({ error: e.message });
  }
};

export const update = [
  ...validationRules,
  async (req: MulterRequest, res: Response) => {
    const errors = validationResult(req);
    if (!errors.isEmpty()) return res.status(400).json({ errors: errors.array() });

    try {
      const item = await <%= toPascal(ent.name) %>.findByPk(req.params.id);
      if (!item) return res.status(404).json({ error: 'Not found' });
      const data = { ...req.body };
      if (req.file) data.image = `/uploads/${req.file.filename}`;
      await item.update(data);
      res.json(item);
    } catch (e: any) {
      res.status(500).json({ error: e.message });
    }
  }
];

export const remove = async (req: Request, res: Response) => {
  try {
    const item = await <%= toPascal(ent.name) %>.findByPk(req.params.id);
    if (!item) return res.status(404).json({ error: 'Not found' });
    await item.destroy();
    res.json({ success: true });
  } catch (e: any) {
    res.status(500).json({ error: e.message });
  }
};